{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/utils/users.json"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "lib": [
    "es6"
  ]
}